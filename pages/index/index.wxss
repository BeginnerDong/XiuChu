page {
	height: 100%
}

.box {
	width: 100%;
	height: 100%;
	position: relative;

}

.btm {
	box-sizing: border-box;
	padding: 30rpx;
	width: 100%;
	height: 142rpx;
	background: rgba(0, 0, 0, 0.6);
	position: fixed;
	bottom: 0rpx;

}

.top {
	/* border: solid 1rpx red; */
	width: 100%;
	height: 100%;
	position: absolute;

	top: 0rpx;
}

.top-top {

	width: 100%;
	height: 24%;
}

.top-mid {
	/* border: solid 1rpx red; */
	width: 100%;
	height: 25%;
	margin-top: 5%;
}

.top-mid image {
	width: 37rpx;
	height: 37rpx;

}

.top-mid-center {
	height: 100%;
	width: 70%;

}

.top-btm {
	/* border: solid 1rpx red; */
	width: 100%;
	height: 25%;
	margin-top: 10%;
	box-sizing: border-box;
	padding-left: 5%;
}

.top-btm-left {
	height: 100%;
	width: 80%;

}

.top-btm-right {
	/* border: solid 1rpx red; */
	width: 13%;
	height: 100%;
}

.video-box {
	background: rgba(0, 0, 0, 0.8);
	position: fixed;
	top: 0rpx;
	width: 100%;
	height: 100%;
	z-index: 50;
}

.video {
	width: 100%;
	height: 100%;

}

#player {
	position: absolute;
	z-index: 1;
	margin: 0;
	padding: 0;
	object-fit: fill;
}
